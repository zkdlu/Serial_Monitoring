<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:SerialMonitoring.Models"
                    xmlns:local="clr-namespace:SerialMonitoring.Resources">
    <DataTemplate DataType="{x:Type models:Monitor}">
        <Grid Background="Red" Margin="4" Width="{Binding Path=Width}" Height="{Binding Path=Height}"> 
            <ItemsControl ItemsSource="{Binding Path=Channels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="2" Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type models:Channel}">
        <Grid Background="Blue" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </Grid>
    </DataTemplate>

</ResourceDictionary>